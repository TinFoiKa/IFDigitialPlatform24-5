/* pages/hotel/index.wxss */
.container {
  position: absolute;
  width: 100vw;
  height: 100vh;
}

.center {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 25px;
  width: 90%;
  height: 50px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #fff;
  box-shadow: 0px 0px 6px 2px rgba(0, 0, 0, 0.12);
}

.input {
  flex: 1;
  color: grey;
  font-size: 16px;
}

.location {
  width: 30px;
  height: 30px;
  margin-left: 10px;
  margin-right: 20px;
  box-sizing: border-box;
}

.headImg {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 10px;
  box-sizing: border-box;
}

.sheet {
  width: 100vw;
  height: 60vh;
  position: absolute;
  bottom: 0;
}

.scrollable {
  height: 100%;
  overflow: hidden;
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
}

.bar {
  height: 60px;
  box-sizing: border-box;
  background-color: #fff;
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 10px;
  box-shadow: 0px -3px 0 1px rgba(0, 0, 0, 0.12);
}

.bar-shadow-placeholder {
  height: 30px;
}

.indicator {
  background-color: rgb(190, 186, 186);
  border-radius: 3px;
  height: 4px;
  width: 80px;
}

.section {
  background-color: #fff;
  padding: 5px 15px 25px;
}

.card {
  width: 100%;
  border-radius: 10px;
  padding: 10px;
  box-sizing: border-box;
  box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.12);
}

.card-img {
  width: 100%;
  height: 200px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.card-intro {
  margin-top: 6px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.intro-left {
  display: flex;
  flex-direction: column;
}

.name-1 {
  font-weight: 600;
  font-size: 18px;
}

.name-2 {
  font-size: 14px;
}

.intro-right {
  background-color: rgb(247, 208, 175);
  color: rgb(223, 112, 91);
  padding: 6px;
  border-radius: 4px;
}